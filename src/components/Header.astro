---
const { hide } = Astro.props
---

<div class={`bg-gray-50 shadow-md z-20 sticky w-full top-0 opacity-[.9] ${hide && 'hidden'}`}>
    <div class="flex pt-5 lg:pt-6 pb-1 lg:pb-3 px-6 container mx-auto">
        <div class="flex-1">
            <p class="text-2xl lg:text-[1.6rem] 2xl:text-[1.75rem] font-[400]">SIBI<span class="text-purple-500">Associates</span></p>
        </div>
        <div class="">
            <ul class="hidden md:flex md:flex-row mt-[-4px] text-xl lg:text-[1.1rem] 2xl:text-xl gap-8 text-gray-700">
                <a href="/">
                    <li class="p-2 rounded-lg active:bg-gray-300 hover:scale-[1.08]">Home</li>
                </a>
                <a href="/about">
                    <li class="p-2 rounded-lg active:bg-gray-300 hover:scale-[1.08]">About</li>
                </a>
                <a href="/contact">
                    <li class="p-2 rounded-lg active:bg-gray-300 hover:scale-[1.08]">Contact</li>
                </a>
            </ul>
            <ul class="md:hidden flex text-xl text-gray-700 gap-1 xs:gap-2 sm:gap-4 mt-[-5px]">
                <a href="/">
                    <li class="p-2 rounded-lg active:bg-gray-300"><i class="fa-solid fa-house-chimney"></i></li>
                </a>
                <a href="/about">
                    <li class="p-2 rounded-lg active:bg-gray-300"><i class="fa-solid fa-circle-info"></i></li>
                </a>
                <a href="/contact">
                    <li class="p-2 rounded-lg active:bg-gray-300"><i class="fa-solid fa-address-book"></i></li>
                </a>
            </ul>
        </div>
    </div>
</div>